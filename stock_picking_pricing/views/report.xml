<odoo>


    <template id="external_no_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="header o_background_header">
            
            <!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" class="pull-left"/> -->
        </div>


        <div class="footer o_background_footer">
            <div class="text-center">  
                <t >
                    <ul  style="margin-top:15px;">

                    </ul>
                </t >
            </div>
            </div>
        <div class="article">
          <t t-raw="0" />
        </div>
    </template>


    <template id="report_delivery_document_valorised">
        <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  

                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">ICE: <span t-field="o.partner_id.vat"/></div>
                </t>
                    <h2>
                        <!-- <span t-if="o.picking_type_id.code=='incoming' and not o.picking_type_id.retour">Bon de Réception</span>
                        <span t-if="o.picking_type_id.code=='outgoing'and not o.picking_type_id.retour">Bon de Livraison</span>
                        <span t-if="o.picking_type_id.retour">Bon de Retour</span> -->

                        <span t-if="o.picking_type_id.code=='incoming'">Bon de Réception</span>
                        <span t-if="o.picking_type_id.code=='outgoing'">Bon de Livraison</span>
                        <span t-field="o.name"/>
                    </h2>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th t-if="o.origin"><strong>BC (Origine)</strong></th>
                                <th t-if="o.picking_type_id.code=='incoming'"><strong>Ref Bl fournisseur</strong></th>
                                <th name="td_sched_date_h">
                                    <strong>Date</strong>
                                </th>
                                <th name="td_sched_livreur" t-if="o.livreur">
                                    <strong>Livreur</strong>
                                </th>
                                <!-- <th name="td_sched_mat" t-if="o.livreur_id">
                                    <strong>Matricule</strong>
                                </th> -->
                                <!-- <th name="td_sched_rec">
                                    <strong>Réception par</strong>
                                </th> -->

                                <th name="td_sched_livreur" t-if="o.sale_id.user_id.name">
                                    <strong>Agent commercial</strong>
                                </th>
                                <!-- <th name="td_sched_livreur" t-if="o.mode_paiement">
                                    <strong>Mode de paiement</strong>
                                </th> -->

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-if="o.origin">
                                    <span t-field="o.origin"/>
                                </td>
                                
                                <td  t-if="o.picking_type_id.code=='incoming'">
                                    <span t-field="o.bl_fournisseur"/>
                                </td>
                                <td name="td_sched_date">
                                   <t t-if="o.state == 'done'">
                                        <span t-field="o.date_done"/>
                                   </t>
                                   <t t-if="o.state != 'done'">
                                        <span t-field="o.scheduled_date"/>
                                   </t>
                                  
                                </td>
                                 <td t-if="o.livreur">
                                        <span t-field="o.livreur"/>
                                   </td>
                                 <!-- <td t-if="o.livreur_id">
                                        <span t-field="o.vehicle_id.license_plate"/>
                                   </td> -->
                                 <!-- <td>
                                        <span t-field="o.received_by"/>
                                   </td> -->
                                 <td t-if="o.sale_id.user_id.name">
                                        <span t-field="o.sale_id.user_id.name"/>
                                   </td>
                                 <!-- <td t-if="o.mode_paiement">
                                        <span t-field="o.mode_paiement.name"/>
                                   </td> -->
                            </tr>
                        </tbody>
                    </table>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.move_lines])"/>

                    <table class="table table-condensed mt48"> <!--t-if="not o.pack_operation_ids"-->
                        <thead>
                            <tr>
                                <!-- <th><strong>Référence</strong></th> -->
                                <th><strong>Désignation</strong></th>
                                <th><strong>Qté</strong></th>
                                <th t-if="display_discount">Remise.(%)</th>
                                <th><strong>P.U.H.T</strong></th>
                                <th><strong>Taxes</strong></th>
                                <th><strong>Montant HT</strong></th>
                                <th><strong>Montant TTC</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_lines" t-as="move">
                                <!-- <td><span t-field="move.product_id.default_code"/></td> -->
                                <td><span t-field="move.product_id.name"/></td>
                                <td><span t-field="move.product_uom_qty"/></td>
                                <td t-if="display_discount">
                                    <span t-field="move.discount"/>
                                </td>
                                <td>
                                    <span t-field="move.price_unit2"/>
                                </td>
                                <td>
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), move.tax_ids))"/>
                                </td>
                                <td>
                                    <span t-field="move.amount_untaxed"/>
                                </td>
                                <td>
                                    <span t-field="move.amount_total"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total HT</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                        </tr>

                        <tr>
                            <td><strong>TVA</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total TTC</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total"/>
                            </td>
                        </tr>
                    </table>
                            </div>
                        </div>
                    </div>


                    <p t-if="o.poids_total">
                        Poids Total : <t t-esc="o.poids_total"/> Kg .
                    </p>
                    <p t-if="o.backorder_id">
                        Ce BL est un reliquat du : <t t-esc="o.backorder_id.name"/>.
                    </p>
                    <p>
                        <strong t-if='o.picking_type_id.code=="outgoing"'> Arrêté le présent bon de livraison à la somme de: <span t-field="o.total_lettre"> TTC</span></strong>
                        <strong t-if='o.picking_type_id.code=="incoming"'> Arrêté le présent bon de reception à la somme de: <span t-field="o.total_lettre"> TTC</span></strong>
                        
                    </p>


                    <p t-if="o.note">
                     <t t-esc="o.note"/>
                    </p>

                     <table class="table table-condensed" style="margin-top:50px;">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Visa Caissier</strong>
                                </th>
                                <th><strong>Visa Magasinier/Contrôle</strong></th>
                                <th>
                                    <strong>Accusé de réception</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="height: 50px;">
                                <td>
                                    <span>
                                    </span>
                                </td>
                                
                                <td>
                                    <span>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>  
</div>

                    </t>
                </t>
            </t>
</template>


